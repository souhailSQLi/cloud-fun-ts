{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "quotemark": [
            true,
            "single"
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "indent": [
            true,
            "spaces",
            2
        ]
    },
    "rulesDirectory": []
}